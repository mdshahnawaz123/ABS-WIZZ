<Window x:Class="ABS_WIZZ.UI.ECD_ABS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ABS_WIZZ.UI"
        mc:Ignorable="d"
        Title="ECD ABS Manager"
        Height="750"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tertiary Button Style (Orange) -->
        <Style x:Key="TertiaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F59E0B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B45309"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" 
                                    Opacity="0.08" 
                                    BlurRadius="16" 
                                    ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Radio Button Style -->
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" 
                Background="#1E3A8A" 
                CornerRadius="12"
                Padding="24,20">
            <StackPanel>
                <TextBlock Text="ECD ABS Manager" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          Margin="0,0,0,4"/>
                <TextBlock Text="Asset Breakdown Structure Management System" 
                          FontSize="13" 
                          Foreground="#93C5FD"/>
            </StackPanel>
        </Border>

        <!-- ROOM CODE GENERATOR CARD -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Border Background="#DBEAFE" 
                            CornerRadius="8" 
                            Padding="10"
                            Margin="0,0,12,0">
                        <TextBlock Text="📋" FontSize="20"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource SectionHeader}" Margin="0">
                            Room Code Generator
                        </TextBlock>
                        <TextBlock Text="Generate standardized ABS codes for rooms" 
                                  FontSize="12" 
                                  Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="Generate Room Codes"
                        Style="{StaticResource ModernButton}"
                        Width="200"
                        HorizontalAlignment="Left"
                        Click="RoomCodeGen_Click"/>
            </StackPanel>
        </Border>

        <!-- ROOM ELEMENT ASSIGNMENT CARD -->
        <Border Grid.Row="4" Style="{StaticResource CardPanel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="#D1FAE5" 
                                CornerRadius="8" 
                                Padding="10"
                                Margin="0,0,12,0">
                            <TextBlock Text="🏗️" FontSize="20"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource SectionHeader}" Margin="0">
                                Room Element Assignment
                            </TextBlock>
                            <TextBlock Text="Assign ABS data from rooms to elements" 
                                      FontSize="12" 
                                      Foreground="#6B7280"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="Assign ABS to Elements"
                            Style="{StaticResource SecondaryButton}"
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="RoomEleGen_Click"/>
                </StackPanel>

                <!-- MODEL SCOPE SELECTOR -->
                <Border Grid.Column="2" 
                        Background="#F9FAFB" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1"
                        CornerRadius="8" 
                        Padding="20"
                        VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="Model Scope" 
                                  FontSize="14" 
                                  FontWeight="SemiBold" 
                                  Foreground="#374151"
                                  Margin="0,0,0,12"/>

                        <RadioButton Content="Host Model"
                                    Name="RbHost"
                                    IsChecked="True"
                                    GroupName="ModelScope"/>

                        <RadioButton Content="Linked Model"
                                    Name="RbLinked"
                                    GroupName="ModelScope"
                                    Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- EQUIPMENT UNIQUE NUMBER CARD -->
        <Border Grid.Row="6" Style="{StaticResource CardPanel}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Border Background="#FEF3C7" 
                            CornerRadius="8" 
                            Padding="10"
                            Margin="0,0,12,0">
                        <TextBlock Text="🔢" FontSize="20"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource SectionHeader}" Margin="0">
                            Equipment Unique Numbers
                        </TextBlock>
                        <TextBlock Text="Assign sequential numbers (001, 002...) to equipment by type per room" 
                                  FontSize="12" 
                                  Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="Assign Unique Numbers"
                        Style="{StaticResource TertiaryButton}"
                        Width="200"
                        HorizontalAlignment="Left"
                        Click="UniqueNumber_Click"/>
            </StackPanel>
        </Border>

        <!-- FOOTER INFO -->
        <Border Grid.Row="7" 
                VerticalAlignment="Bottom"
                Background="Transparent"
                Padding="0,16,0,0">
            <TextBlock Text="💡 Tip: Select Model Scope before running operations" 
                      FontSize="12" 
                      Foreground="#6B7280"
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>