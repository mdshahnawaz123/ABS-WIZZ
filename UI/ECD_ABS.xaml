<Window x:Class="ABS_WIZZ.UI.ECD_ABS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABS_WIZZ.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="ECD Room Code Generator" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Margin="10,10,0,0"/>
        <Button Content="Generate Code" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="10,50,0,0" Click="RoomCodeGen_Click"/>
        <Label Content="Assign ABS to Room Element" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Margin="0,85,0,0"/>
        <Button Content="Room Element ABS" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="10,158,0,0" Click="RoomEleGen_Click"/>
        <CheckBox Content="Host Model" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="118,129,0,0" IsChecked="False" Checked="HostModelCheck"/>
        <CheckBox Content="Linked Model" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,129,0,0" IsChecked="False" Checked="LinkedModelCheck"/>


    </Grid>
</Window>
